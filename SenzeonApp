   </div>
  </div>

  <button id="openSendMoneyModal" class="send-money-button">
   <i class="fas fa-paper-plane"></i> Send Money
  </button>
 </div>

 <!-- Модальне вікно для переказу коштів -->
 <div id="sendMoneyModal" class="modal">
  <div class="modal-content">
   <span class="close" onclick="closeSendMoneyModal()">&times;</span>
   <h2>Send Money</h2>
   <div class="send-money-form">
    <input type="text" id="recipient-address" placeholder="Recipient Address">
    <input type="number" id="amount" placeholder="Amount (Senz)">
    <button onclick="sendMoney()">
     <i class="fas fa-paper-plane"></i> Send
    </button>
   </div>
  </div>
 </div>

 <script>
  // Відкриття модального вікна
  document.getElementById('openSendMoneyModal').addEventListener('click', function () {
   document.getElementById('sendMoneyModal').style.display = 'block';
  });

  // Закриття модального вікна
  function closeSendMoneyModal() {
   document.getElementById('sendMoneyModal').style.display = 'none';
  }

  // Генерування випадкової адреси гаманця (для демонстрації)
  function generateWalletAddress() {
   let address = "";
   const characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
   for (let i = 0; i < 25; i++) {
    address += characters.charAt(Math.floor(Math.random() * characters.length));
   }
   return address;
  }

  // Отримання елементів DOM
  const balanceElement = document.getElementById('balance');
  const recipientAddressInput = document.getElementById('recipient-address');
  const amountInput = document.getElementById('amount');
  const walletIdElement = document.getElementById('wallet-id');

  // Генерування та відображення випадкового ID
  const walletId = generateWalletAddress();
  walletIdElement.textContent = walletId;

  // Обробка відправки коштів (для демонстрації)
  function sendMoney() {
   const recipientAddress = recipientAddressInput.value;
   const amount = parseFloat(amountInput.value);

   // Валідація введених даних (спрощена для демонстрації)
   if (!recipientAddress || recipientAddress.length !== 25) {
    alert("Please enter a valid recipient address (25 characters).");
    return;
   }
   if (isNaN(amount) || amount <= 0) {
    alert("Please enter a valid amount.");
    return;
   }

   // Оновлення балансу (для демонстрації)
   const currentBalance = parseFloat(balanceElement.textContent);
   if (amount > currentBalance) {
    alert("Insufficient funds.");
    return;
   }
   const newBalance = currentBalance - amount;
   balanceElement.textContent = newBalance.toFixed(2);

   // Очищення полів вводу
   recipientAddressInput.value = "";
   amountInput.value = "";

   // Відображення успішного повідомлення
   alert("Money sent successfully!");

   // Закриття модального вікна
   closeSendMoneyModal();
  }
 </script>
</body>

